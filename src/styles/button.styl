.button
  display flex
  align-items center
  justify-content center
  border none
  outline none
  color #fff
  background color-primary-500
  cursor pointer
  font-size font-size-body
  font-weight bold
  border-radius border-radius-object
  transition background 0.2s
  margin 0 auto
  &--large
    width 100% 
    height 56px
    border-radius border-radius-object
  &--medium
    width 164px
    height 56px
    border-radius border-radius-object
  &--small
    width 70px
    height 24px
    border-radius border-radius-object
  &:hover, &:active
    background color-primary-700
  &:disabled,
  &[disabled],
  &--large:disabled,
  &--medium:disabled,
  &--small:disabled
    background color-neutral-300
    color color-neutral-100
    cursor not-allowed
    pointer-events none
    &:hover, &:active
      background color-neutral-300
      color color-neutral-100

// LINE 官方按鈕樣式
.login-btn
  display flex
  width 100%
  height 56px
  border-radius 12px
  font-size font-size-button-lg
  font-weight bold
  display flex
  align-items center
  justify-content center
  margin 0 auto
  &--line
    background #00c300
    color #fff
    border none
    margin-bottom 0
    transition background 0.2s
    &:hover, &:active
      background #009900
  .login-btn__icon
    display inline-flex
    align-items center
    margin-right 8px
    // 若有需要可調整 icon 與文字間距

// 按鈕置中工具類
.button-center
  display flex
  margin 0 auto 

.button--send-code
  color color-neutral-100
  background color-neutral-900 

// Button Table Layout
.button-table
  width 100%
  margin 32px 0
  border-collapse separate
  border-spacing 0 16px

.button-table-header
  display flex
  align-items flex-end
  margin-bottom 16px
  .button-table-empty
    width 120px
  .button-table-state
    flex 1
    text-align center
    font-size 16px
    color #666
    font-weight 500

.button-table-row
  display flex
  align-items flex-start
  margin-bottom 24px

.button-table-label
  width 120px
  font-size 28px
  font-weight bold
  color #444
  text-align right
  line-height 1.2
  &.primary
    color #444
  &.secondary
    color #444
  &.tertiary
    color #444
  &.transparent
    color #444

.button-table-size-group
  flex 1
  display flex
  flex-direction column
  align-items center
  margin 0 8px

.button-table-size-label
  font-size 16px
  color #888
  margin-bottom 8px
  text-align center

.button-table-btns
  display flex
  flex-direction column
  gap 12px

// Button Styles
.btn
  display inline-flex
  align-items center
  justify-content center
  border none
  border-radius 8px
  font-size 16px
  font-weight 500
  padding 0 24px
  height 44px
  cursor pointer
  transition all 0.2s
  outline none
  gap 8px
  svg
    margin-right 4px

.btn-lg
  height 48px
  font-size 18px
  padding 0 32px

.btn-md
  height 40px
  font-size 16px
  padding 0 24px

.btn-sm
  height 32px
  font-size 14px
  padding 0 16px

// Primary
.btn-primary
  background #1eabf8
  color #fff
  &:hover, &.hovered
    background #68c7fa
  &:focus, &.focused
    background #fff
    color #1eabf8
    border 2px solid #1eabf8
  &:active, &.pressed
    background #1579b0
  &[disabled], &.disabled
    background #b3e0fa
    color #fff
    cursor not-allowed

// Secondary
.btn-secondary
  background #666
  color #fff
  &:hover, &.hovered
    background #989898
  &:focus, &.focused
    background #fff
    color #666
    border 2px solid #666
  &:active, &.pressed
    background #484848
  &[disabled], &.disabled
    background #d0d0d0
    color #fff
    cursor not-allowed

// Tertiary
.btn-tertiary
  background #fff
  color #666
  border 1px solid #d0d0d0
  &:hover, &.hovered
    background #fafbfc
  &:focus, &.focused
    background #fff
    color #666
    border 2px solid #666
  &:active, &.pressed
    background #e0e0e0
  &[disabled], &.disabled
    background #f5f5f5
    color #d0d0d0
    cursor not-allowed

// Transparent
.btn-transparent
  background transparent
  color #666
  &:hover, &.hovered
    background #e0e0e0
  &:focus, &.focused
    background #fff
    color #666
    border 2px solid #666
  &:active, &.pressed
    background #d0d0d0
  &[disabled], &.disabled
    background transparent
    color #d0d0d0
    cursor not-allowed 
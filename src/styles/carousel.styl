.carousel
  width 100%
  max-width 100%
  height auto
  position relative
  overflow hidden
  margin-bottom 15px

  .carousel-track
    display flex
    width 100%
    height auto
    transition transform 0.5s cubic-bezier(0.4,0,0.2,1)

  .carousel-img
    width 100%
    height auto
    object-fit contain
    // background #eee
    flex-shrink 0
    flex-grow 0
    flex-basis 100%
    user-select none
    pointer-events none

  .carousel-indicators
    position absolute
    left 50%
    bottom 10px
    transform translateX(-50%)
    display flex
    gap 8px

    span
      display block
      width 5px
      height 5px
      border-radius 50%
      background #eee
      transition background 0.3s
      cursor pointer

      &.active
        background color-primary-500 
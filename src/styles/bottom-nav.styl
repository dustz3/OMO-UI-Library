// Bottom Navigation Bar
.bottom-nav
  position fixed
  left 0
  right 0
  bottom -1px
  height 92px
  background #fff
  display flex
  justify-content space-around
  align-items flex-end
  box-shadow -5px -2px 12px rgba(0,0,0,0.06)
  z-index 100
  overflow visible
  padding 2px 0 25px

  .nav-item
    flex-basis 18%
    display flex
    flex-direction column
    align-items center
    justify-content center
    color color-neutral-300
    font-size 12px
    padding 8px 0 4px
    position relative
    z-index 1
    cursor pointer
    transition color 0.2s

    svg, .icon
      font-size 28px
      margin-bottom 2px
      display block

    &.active,
    &:hover,
    &:focus
      color color-primary-500

    &.qr:hover
      color color-neutral-300 // 保持原色，不受 hover 影響

  // 中間 QR-Code 按鈕
  .nav-item.qr
    flex-basis 21%
    display flex
    align-items center
    justify-content center
    position relative
    height 80px
    width 80px
    border 5px solid #fff
    background linear-gradient(315deg, color-primary-700, color-primary-500)
    border-radius 50%
    box-shadow 0px 5px 5px #ccc
    transition transform 0.3s cubic-bezier(0.4, 0, 0.2, 1)
    
    &:hover
      transform scale(1.1)
    
    .qr-btn
      transition none

  // 避免 QR 按鈕遮住下方 
  .icon-btn
    background none
    border none
    padding 0
    cursor pointer
    display flex
    flex-direction column
    align-items center
    justify-content center
    width 100%
    height 100%
    
    &:hover, &:focus
    //   background rgba(200,0,10,0.08)
      outline none

  .icon
    display block
    margin-bottom 2px
    font-size 28px
    width 28px
    height 28px

  span
    font-size 12px
    margin-top 2px 
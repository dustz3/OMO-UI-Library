.login-page
  display flex
  flex-direction column
  align-items center
  justify-content flex-start
  min-height 100vh
  padding-top 100px

.login-logo
  margin-bottom 80px
  img
    width 120px
    height 120px
    object-fit contain
    border-radius border-radius-object
    background #fafafa
    border 1px solid #ddd

.login-btns
  width 100%
  display flex
  flex-direction column
  gap 16px
  font-size font-size-body
  margin-bottom 32px

.login-agree
  display flex
  align-items center
  justify-content center
  margin-top 16px
  gap 8px
  input[type="checkbox"]
    width 20px
    height 20px
    margin-right 2px
  .login-link
    color color-primary-500
    text-decoration underline
    margin-left 4px

// 只在 login 頁隱藏 bottom-nav
.login-page ~ .bottom-nav,
.login-page .bottom-nav
  display none !important

body:has(.login-page) .bottom-nav
  display none !important

.login-agree input[type="checkbox"]
  appearance none
  -webkit-appearance none
  width 20px
  height 20px
  border 2px solid color-neutral-300
  border-radius 2px
  background #fff
  display inline-block
  position relative
  vertical-align middle
  margin-right 2px
  cursor pointer
  transition border 0.2s
  outline none
  &:checked
    border 2px solid color-neutral-300
    background #fff
    &::after
      content ''
      display block
      position absolute
      left 4px
      top 1px
      width 8px
      height 12px
      border solid color-primary-500
      border-width 0 3px 3px 0
      border-radius 2px
      transform rotate(45deg) scale(1.1)
      box-sizing border-box
  &::after
    content ''
    display none
  &:checked::after
    display block

// 調整 label 與 checkbox 對齊
.login-agree label
  vertical-align middle
  font-size font-size-body
  margin-right 0px 

.input-error
  font-size font-size-helper
  color color-error
  margin-top 4px 

.login-form
  width 80%
  margin 0 auto 

.login-title
  font-size 22px
  font-weight bold
  color color-primary-500
  text-align center
  margin-top 0
  margin-bottom 24px 
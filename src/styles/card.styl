// Card 基本樣式
.card
  background #fff
  border-radius 10px
  box-shadow 0 2px 8px rgba(0,0,0,0.06)  
  display flex
  flex-direction column
  min-height 100px
  margin 0

// 全幅卡片
.card-full
  margin 0 2%
// 卡片容器
.card-list
  display flex
  flex-direction column
  gap 15px

// 半幅卡片自動換行
.card-row
  display flex
  flex-direction row
  justify-content space-between
  width auto
  gap 10px
  margin 0 2%
  
.card-half
  width calc(50% - 5px)
  

// 移除 .card-row 相關設定

.card-row:last-child
  margin-bottom 0 

.card__store-info
  display flex
  flex-direction column
  padding 16px
  gap 12px

  .card__store-top
    display flex
    gap 12px
    align-items flex-start

    .card__store-logo
      width 60px
      height 60px
      object-fit cover

    .card__store-meta
      flex 1
      display flex
      flex-direction column
      justify-content center
      gap 4px

      .card__store-meta-top
        display flex
        align-items baseline
        gap 8px
        .card__store-name
          font-weight bold
          font-size font-size-h2
          color color-neutral-700
        .card__store-distance
          color color-accent-bright-blue
          font-size 14px

      .card__store-meta-bottom
        display flex
        align-items center
        gap 16px
        .card__store-time, .card__store-phone
          display flex
          align-items center
          gap 4px
          color #888
          font-size 14px

  .card__store-bottom
    display flex
    justify-content space-between
    align-items center
    margin-top 8px
    .card__store-tags
      display flex
      gap 8px
    .card__store-link
      color color-primary-500
      font-size 14px
      text-decoration none
      font-weight bold 
      cursor pointer

.card__voucher-info
  display flex
  flex-direction column
  padding 16px
  gap 6px

  .card__voucher-title
    font-size font-size-body
    font-weight bold
    white-space nowrap
    overflow hidden
    text-overflow ellipsis

  .card__voucher-meta
    display flex
    flex-direction column
    gap 2px
    margin-top 2px

    .card__voucher-row
      font-size font-size-secondary
      color color-accent-gray-blue

.rewardItem-info
  display flex
  flex-direction column
  align-items flex-start
  gap 8px
  padding 16px

  .rewardItem-info__top
    width 100%
    display flex
    flex-direction column
    align-items flex-start
    gap 6px

    .rewardItem-info__img-wrap
      width 100%
      aspect-ratio 1/1
      background #f5f5f5
      border-radius 8px
      overflow hidden
      display flex
      align-items center
      justify-content center

      .rewardItem-info__img
        width 100%
        height 100%
        object-fit cover
        display block

    .rewardItem-info__name
      font-size font-size-body
      color neutral-900      font-weight bold
      margin-top 4px
      line-height 1.3
      overflow hidden
      text-overflow ellipsis
      display -webkit-box
      -webkit-line-clamp 2
      -webkit-box-orient vertical

  .rewardItem-info__bottom
    width 100%
    display flex
    align-items center
    justify-content flex-start

    .rewardItem-info__point
      display flex
      align-items baseline
      gap 4px

      .rewardItem-info__point-num
        color color-primary-500
        font-size font-size-h3
        font-weight bold

      .rewardItem-info__point-label
        font-size font-size-secondary
        color color-neutral-300
        margin-left 2px
// =====================
// COLORS
// =====================
// Base
color-base-white = #ffffff
color-base-black = #121212

// Neutral
color-neutral-100 = #d0d0d0
color-neutral-300 = #989898
color-neutral-500 = #666666
color-neutral-700 = #484848
color-neutral-900 = #2b2b2b

// Primary
color-primary-300 = #68c7fa
color-primary-500 = #1eabf8
color-primary-700 = #1579b0

// Secondary (Orange)
color-secondary-300 = #ffd180
color-secondary-500 = #ff9800
color-secondary-700 = #f57c00

// Semantic Colors
color-error = #e96161
color-information = #60a0ff
color-success = #64bb67
color-warning = #f5ce6c

// =====================
// TYPOGRAPHY
// =====================
font-family-base = 'Noto Sans TC', 'Noto Sans', 'PingFang TC', 'Microsoft JhengHei', Arial, sans-serif

font-size-h1 = 38px
font-size-h2 = 22px
font-size-h3 = 18px
font-size-h4 = 16px
font-size-body = 16px
font-size-secondary = 14px
font-size-caption = 12px

font-size-button-lg = 18px
font-size-button = 16px
font-size-input = 16px
font-size-tag = 12px

font-weight-bold = 700
font-weight-regular = 400

// =====================
// RADIUS & SHADOW
// =====================
border-radius-object = 12px
border-radius-tag = 5px
border-radius-checkbox = 2px
shadow-card = 0 2px 8px rgba(0,0,0,0.06)
shadow-container = 0 0 8px rgba(0,0,0,0.08)

// =====================
// SPACING
// =====================
spacing-md = 16px
spacing-sm = 8px 
bottom-nav-items = 6 
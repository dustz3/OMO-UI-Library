    svg(width="24" height="25" viewBox="0 0 24 25" fill="none" xmlns="http://www.w3.org/2000/svg")
      g(clip-path="url(#clip0_280_21)")
        path(d="M12.0273 1.98145L3.42529 7.38281V17.2352L12.0273 22.2364L20.9294 17.4852V7.38281L12.0273 1.98145Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")

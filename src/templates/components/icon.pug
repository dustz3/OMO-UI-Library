mixin icon(name)
  if name == 'color'
    include ../../images/icons/icon-color.svg
  else if name == 'typo'
    // 最新 typo icon SVG
    svg(width="24" height="25" viewBox="0 0 24 25" fill="none" xmlns="http://www.w3.org/2000/svg")
      path(d="M1.06299 20.2495L3.02083 15.1443M12.9253 20.2495L10.9923 15.1443M3.02083 15.1443L7.03198 4.68506L10.9923 15.1443M3.02083 15.1443H10.9923" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
